@page
@model ToDoList.Pages.CreateItemModel
@{
}
<h1>Create Item</h1>
<form method="post">
    <label asp-for="Item.Name">Item Name: </label>
    <input asp-for="Item.Name" />
    <label asp-for="Item.Description">Description: </label>
    <input asp-for="Item.Description" />
    <label asp-for="Item.Users">Responsible:</label>
    <select multiple name="users[]">
        @foreach (var user in Model.Users)
        {
            <option value="@user.Id">
                @user.UserName
            </option>
        }
    </select>
    <input type="submit" />
</form>